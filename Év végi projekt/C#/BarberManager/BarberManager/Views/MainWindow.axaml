<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BarberManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="BarberManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="BarberManager"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <SolidColorBrush x:Key="DividerColor">#EEEEEE</SolidColorBrush> 
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> <!-- bal panel -->
            <ColumnDefinition Width="*" />   <!-- jobb panel -->
        </Grid.ColumnDefinitions>

        <!-- Bal oldali panel -->
        <Border Grid.Column="0" 
                IsVisible="{Binding IsLoggedIn}"
                Width="200"
                Background="#F7F7F7" 
                BorderThickness="0,0,1,0" 
                BorderBrush="{StaticResource DividerColor}">
            
            <Grid RowDefinitions="*, Auto">
                <StackPanel Grid.Row="0" Margin="10, 20">
                    <TextBlock Text="MENÜ" FontWeight="Bold" Foreground="#888888" Margin="10,0,0,10"/>
                    
                    <!-- Home gomb -->
                    <Button Command="{Binding NavigateToTestCommand}" 
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Left"
                            Margin="0,0,0,5"
                            Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Home" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!-- Idopontok gomb -->
                    <Button Command="{Binding NavigateToAppointmentsCommand}" 
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Left"
                            Margin="0,0,0,5"
                            Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Időpontok" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Kijelentkezes gomb -->
                <Button Grid.Row="1" 
                        Command="{Binding LogoutCommand}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Margin="10,0,10,20"
                        Background="#FFF0F0"
                        BorderBrush="#FFCCCC"
                        BorderThickness="1">
                    <TextBlock Text="Kijelentkezés" Foreground="Red" FontWeight="SemiBold"/>
                </Button>
            </Grid>
        </Border>

        <!-- jobb panel -->
        <Grid Grid.Column="1">
            <ContentControl Content="{Binding CurrentPage}" />
        </Grid>
    </Grid>
</Window>