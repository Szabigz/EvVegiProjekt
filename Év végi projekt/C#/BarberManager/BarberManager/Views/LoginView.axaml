<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BarberManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:LoginViewModel"
             x:Class="BarberManager.Views.LoginView">

	<Grid Background="#222222">

		<Border Background="White"
                Width="350"
                VerticalAlignment="Center"
                CornerRadius="10"
                Padding="30"
                BoxShadow="0 4 10 0 #55000000">

			<StackPanel Spacing="15">
				<TextBlock Text="Barber Manager"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

				<!-- Error -->
				<TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

				<!-- Inputok -->
				<StackPanel>
					<TextBlock Text="Felhasználónév" FontWeight="SemiBold" Margin="0,0,0,5"/>
					<TextBox Text="{Binding Username}" Watermark="Írd be a neved..."/>
				</StackPanel>

				<StackPanel>
					<TextBlock Text="Jelszó" FontWeight="SemiBold" Margin="0,0,0,5"/>
					<TextBox Text="{Binding Password}"
                             PasswordChar="*"
                             RevealPassword="False" 
                             Watermark="Add meg a jelszót..."/>
				</StackPanel>

				<!-- Button -->
				<Button Command="{Binding LoginCommand}"
                        Content="Bejelentkezés"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="Black"
                        Foreground="White"
                        Margin="0,10,0,0"
                        Padding="10"/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>