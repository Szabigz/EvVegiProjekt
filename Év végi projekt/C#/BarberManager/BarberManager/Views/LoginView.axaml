<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BarberManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:DataType="vm:LoginViewModel"
             x:Class="BarberManager.Views.LoginView">

	<Grid Background="#222222">
		<Border Background="White" Width="350" VerticalAlignment="Center" CornerRadius="10" Padding="30" BoxShadow="0 4 10 0 #55000000">
			<StackPanel Spacing="15">
				<TextBlock Text="{Binding TitleText}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

				<TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center" 
                           IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

				<StackPanel>
					<TextBlock Text="Név" FontWeight="SemiBold" Margin="0,0,0,5"/>
					<TextBox Text="{Binding Name}" Watermark="Név..."/>
				</StackPanel>

				<StackPanel>
					<TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
					<TextBox Text="{Binding Email}" Watermark="Email..."/>
				</StackPanel>

				<StackPanel>
					<TextBlock Text="Jelszó" FontWeight="SemiBold" Margin="0,0,0,5"/>
					<TextBox Text="{Binding Password}" PasswordChar="*" Watermark="Jelszó..."/>
				</StackPanel>

				<StackPanel IsVisible="{Binding IsRegisterMode}">
					<TextBlock Text="Telefonszám" FontWeight="SemiBold" Margin="0,0,0,5"/>
					<TextBox Text="{Binding PhoneNum}" Watermark="Telefonszám..."/>
				</StackPanel>

				<Button Command="{Binding SubmitCommand}" Content="{Binding SubmitButtonText}" HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center" Background="Black" Foreground="White" Margin="0,10,0,0" Padding="10"/>

				<Button Command="{Binding ToggleModeCommand}" Content="{Binding SwitchModeText}" HorizontalAlignment="Center" 
                        Background="Transparent" Foreground="#666666" Cursor="Hand"/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>